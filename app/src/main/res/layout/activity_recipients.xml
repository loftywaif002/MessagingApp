<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="messagingapp.mastermind.com.messagingapp.RecipientsActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RecipientsList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/EmptyFriendList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_recipeints_list_label"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipientsActivityProgressBar"
        android:layout_below="@android:id/empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"/>
</RelativeLayout>
